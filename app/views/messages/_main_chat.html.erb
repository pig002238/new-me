<div class="main-top">
  <div class="room-name">
  <%= @room.name%>
  
  <%= link_to "チャットを終了する", room_path(@room), data: { turbo_method: :delete }, class: "chat-end" %>
  </div>
</div>


<div class="messages">
  <%= render partial: 'message', collection: @messages %>
</div>





<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_area :content, class: 'form-message', placeholder: 'type a message' %><br>
    <label class="form-image">
      <span class="image-file"></span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>