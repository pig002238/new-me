<!DOCTYPE html>
<html>
  <head>
    <title>NewMe</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav__left">
           <%= link_to "NEW ME", root_path %>
          </div>

   

<%= form_with(url: search_goal_posts_path(@goal), local: true, method: :get, class: "search-wrap") do |form| %>
  <%= form.text_field :keyword, class: "search-text" %>
<% end %>

          <% if user_signed_in? %>
            <div class="nav__right">
              <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: :nav__logout %>
            </div>
          <% else %>
            <div class="nav__right">
              <%= link_to "ログイン", new_user_session_path, class: :nav__btn %>
              <%= link_to "新規登録", new_user_registration_path, class: :nav__btn %>
            </div>
          <% end %>
        </div>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
