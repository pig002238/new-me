<%= form_with(model: @goal, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :purpose, '目的' %><br>
    <%= form.text_area :purpose, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :goal, '目標' %><br>
    <%= form.text_area :goal, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :action, '行動' %><br>
    <%= form.text_area :action, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :deadline, '期日' %><br>
    <%= form.date_field :deadline, class: 'form-date' %>
  </div>

  <%= form.submit '目標を設定', class: 'btn btn-primary' %>

<% end %>