<header id="header"></header>
<div id="contents">
  <aside id="sub">
    <div class="box">
     
  </aside>
  <main id="main">
     <div class="post-box">
            <%= form_with(model: [@goal, Post.new],local: true) do |form| %>
            <%= form.text_area :content, placeholder: "text"%>
            <%= form.file_field :image %>
            <%= form.submit "SEND" %>
            <% end %>
        </div>

        <% @posts.each do |post| %>
        <div class="post-box">
        <%= link_to goal_post_path(@goal, post) do%>
                <%= post.content %><br>
                <%= image_tag post.image.variant(resize: '500x500'), class: 'post-image' if post.image.attached? %>
               </div>
            <% end %>
            <% end %>

  </main>
  <aside id="sub">
    <div class="box">
     <ul class="more_list">
          <li>
            <%= link_to '編集', edit_goal_path(@goal.id) %>
          </li>
          <li>
            <%= link_to '削除', goal_path(@goal.id), data: { turbo_method: :delete } %>
          </li>
        </ul>
    </div>
  </aside>
</div>
